extends layout 

block content
  .w3-card-4
    header.w3-container.w3-cyan(style="position: fixed; top: 0; left: 0; margin-left: 0; width: 100%")
        h1(style="text-align: center")
            span Página do Contrato

    .w3-container(style="margin-top: 50px") 
    ul.w3-ul 
        li Id do Contrato: #{contrato._id}
        li Número do Anúncio: #{contrato.nAnuncio}
        li Tipo de Procedimento: #{contrato.tipoprocedimento}
        li Objecto do Contrato: #{contrato.objectoContrato}
        li Data de Publicação: #{contrato.dataPublicacao}
        li Data de Celebração do Contrato: #{contrato.dataCelebracaoContrato}
        li Preço Contratual: #{contrato.precoContratual}
        li Prazo de Execução: #{contrato.prazoExecucao}
        li NIPC da Entidade Comunicante: #{contrato.NIPC_entidade_comunicante}
        li Entidade Comunicante: #{contrato.entidade_comunicante}
        li Fundamentação: #{contrato.fundamentacao}

    footer.w3-container.w3-cyan(style="position: fixed; bottom: 0; left: 0; margin-left: 0; width: 100%; height: 50px; text-align: center; line-height: 50px;")
        address 
            | EngWeb2024::a95454::#{data}::
            a(href="/") Return