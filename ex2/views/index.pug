extends layout 

block content
  .w3-card-4
    header.w3-container.w3-cyan(style="position: fixed; top: 0; left: 0; margin-left: 0; width: 100%")
        h1(style="text-align: center")
            span Lista de Contratos
    
    .w3-container(style="margin-top: 50px") 
        table.w3-table-all
          tr.w3-cyan
            th Id Contrato
            th Objecto Contrato
            th Data de Celebração do Contrato
            th Preço Contratual
            th NIPC da Entidade Comunicante
            th Entidade Comunicante
          each contrato in lista
              tr
                  td 
                    a(href="/" + contrato._id)= contrato._id
                  td= contrato.objectoContrato
                  td= contrato.dataCelebracaoContrato
                  td= contrato.precoContratual
                  td
                    a(href="/entidades/" + contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante
                  td= contrato.entidade_comunicante
                  
    footer.w3-container.w3-cyan(style="position: fixed; bottom: 0; left: 0; margin-left: 0; width: 100%; height: 50px; text-align: center; line-height: 50px;")
        address 
            | EngWeb2024::a95454::#{data}::
            a(href="/") Return